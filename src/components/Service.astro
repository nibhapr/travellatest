---
import type { CollectionEntry } from "astro:content";
const { serviceEntry } = Astro.props;
interface Props {
	serviceEntry: CollectionEntry<"services">;
}
---
    <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-2">
      <div class="relative h-48">
        <img src={serviceEntry.data.cardImage.src} alt={serviceEntry.data.cardImageAlt} class="w-full h-full object-cover" />
        <!-- Star Rating -->
        <div class="absolute top-2 right-2 flex space-x-1 bg-black bg-opacity-50 rounded-full px-2 py-1">
          {Array(serviceEntry.data.title).fill('').map((_, index) => (
            <svg class="w-4 h-4 text-yellow-400" fill="curentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>
      </div>
      <div class="p-6">
        <h1 class="text-xl font-normal text-gray-900 mb-4">{serviceEntry.data.title}</h1>
        <a 
          href={`/services/${serviceEntry.slug}/`} 
          class="inline-flex items-center text-yellow-600 hover:text-yellow-700 font-medium"
        >
          View Detail
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </div>
  