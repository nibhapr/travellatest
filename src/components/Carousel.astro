---
import { Image } from 'astro:assets';

import slide2 from '../assets/carousel/slide2.jpeg';
import slide3 from '../assets/carousel/slide2.jpeg';
import slide4 from '../assets/carousel/slide3.png';
import bannerPlane from '../assets/carousel/bannerplane.svg';
---

<div class="carousel-container">
  <img src={bannerPlane.src} class="airplane" alt="Flying airplane" width="450" height="450" />

  <div class="carousel">
    {[slide2,slide3,slide4].map((slide, index) => (
      <div class="carousel-slide" id={`slide${index}`}>
        <Image 
          src={slide} 
          alt={`Slide ${index + 1}`} 
          width={1500}
          height={1080}
          class="carousel-image"
          loading="lazy"
          decoding="async"
        />
      </div>
    ))}
  </div>

  <div class="navigation-dots">
    {[0, 1, 2].map((index) => (
      <button 
        onclick={`showSlide(${index})`}
        class="nav-dot"
        aria-label={`Go to slide ${index + 1}`}
      ></button>
    ))}
  </div>
</div>

<style>
  .carousel-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .carousel {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .carousel-slide {
    min-width: 100%;
    height: 100%;
  }

  .carousel-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .navigation-dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
  }

  .nav-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .nav-dot:hover,
  .nav-dot.active {
    background-color: white;
  }

  .airplane {
    position: absolute;
    top: 30%;
    left: -40px;
    z-index: 10;
    transform: translateY(-50%);
    filter: drop-shadow(2px 2px 2px rgba(0,0,0,0.3));
    animation: flyAcross 4.5s linear infinite;
  }

  @keyframes flyAcross {
    0% {
      left: -40px;
    }
    100% {
      left: calc(100% + 40px);
    }
  }

  /* Media query for mobile view */
  @media (max-width: 768px) {
    .carousel-container {
      height: 600px; /* Adjust carousel height for mobile */
      margin-bottom: -150px;
    }

    .carousel-image {
      object-fit: contain; /* Ensure image fills the available space */
    }

    .airplane {
      display: none; /* Hide airplane in mobile view */
    }

    .nav-dot {
      width: 10px; /* Scale down navigation dots for mobile */
      height: 10px;
    }

    /* Additional styles for very small screens (e.g., mobile phones) */
    @media (max-width: 480px) {
      .carousel-container {
        height: 500px; /* Further reduce height for smaller screens */
      }
    }
  }
</style>

<script>
  let currentSlide = 0;
  const slides = document.querySelector('.carousel') as HTMLElement;
  const dots = document.querySelectorAll('.nav-dot');

  function showSlide(index: number) {
    currentSlide = index;
    const offset = -currentSlide * 100;
    if (slides) {
      slides.style.transform = `translateX(${offset}%)`;
    }
    
    // Update active dot
    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === currentSlide);
    });
  }

  // Initialize first slide
  showSlide(0);

  // Auto-advance slides every 5 seconds
  setInterval(() => {
    currentSlide = (currentSlide + 1) % 3;
    showSlide(currentSlide);
  }, 3800);
</script>